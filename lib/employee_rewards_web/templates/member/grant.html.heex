<h1>Grant points</h1>

<.form let={f} for={@changeset} action={Routes.member_path(@conn, :change, @member)} id="grant_points">
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :points %>
  <%= text_input f, :points, required: true %>
  <%= error_tag f, :points %>
  <div>
    <%= submit "Grant Points" %>
  </div>

</.form>
